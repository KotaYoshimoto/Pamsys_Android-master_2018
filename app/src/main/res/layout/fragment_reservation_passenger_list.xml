<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.yamaguchi.pamsys.ReservationPassengerListDialogFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#000000"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/busStopName"
            style="@style/EntrainningTableEditText"
            android:layout_width="match_parent"
            android:gravity="center"
            android:text="No Data"
            android:textSize="40dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#000000">

        <TextView
            android:id="@+id/willTotalGetOnCountTextView"
            style="@style/EntrainningTableTextView"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="乗車予定人数" />

        <TextView
            android:id="@+id/willTotalGetOffCountTextView"
            style="@style/PassengerCountTableTextView"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="降車予定人数" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_weight="1">

        <ListView
            android:id="@+id/willGetOnPassemgerDetailListView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            >

        </ListView>

        <ListView
            android:id="@+id/willGetOffPassengerDetailListView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_weight="1">

        </ListView>

    </LinearLayout>

    <Button
        android:id="@+id/backButton"
        style="@style/ButtonBase"
        android:layout_width="300dp"
        android:text="戻る"
        android:textSize="40dp" />

</LinearLayout>
